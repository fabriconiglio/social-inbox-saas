# Configuración de Storage
# Copia este archivo a .env.local y configura las variables según tu proveedor

# Proveedor de storage (cloudinary, s3, local)
STORAGE_PROVIDER=local

# Cloudinary (si usas Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 (si usas S3)
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Local Storage (para desarrollo)
LOCAL_UPLOAD_PATH=./uploads
LOCAL_PUBLIC_URL=http://localhost:3000/uploads
