# ========================================
# Variables de Entorno para Testing
# ========================================
# Copia este archivo a .env.test y completa con tus credenciales de prueba

# ========================================
# Database (Testing)
# ========================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_messagehub
TEST_REDIS_URL=redis://localhost:6379/1

# ========================================
# NextAuth (Testing)
# ========================================
NEXTAUTH_SECRET=test-secret-key-for-testing-only-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# ========================================
# Instagram (Meta)
# ========================================
# Obtener de: https://developers.facebook.com/apps/
# Requiere: pages_messaging, instagram_manage_messages, pages_manage_metadata
TEST_INSTAGRAM_PAGE_ID=
TEST_INSTAGRAM_ACCESS_TOKEN=
TEST_INSTAGRAM_THREAD_ID=  # ID de conversación para pruebas de envío

# ========================================
# Facebook Messenger (Meta)
# ========================================
# Obtener de: https://developers.facebook.com/apps/
# Requiere: pages_messaging, pages_manage_metadata
TEST_FACEBOOK_PAGE_ID=
TEST_FACEBOOK_ACCESS_TOKEN=
TEST_FACEBOOK_THREAD_ID=  # ID de conversación para pruebas de envío

# ========================================
# WhatsApp Cloud API (Meta)
# ========================================
# Obtener de: https://business.facebook.com/wa/manage/home/
# Requiere: whatsapp_business_messaging
TEST_WHATSAPP_PHONE_ID=
TEST_WHATSAPP_ACCESS_TOKEN=
TEST_WHATSAPP_PHONE_NUMBER=  # Número de prueba (formato: +1234567890)
TEST_WHATSAPP_BUSINESS_ID=

# ========================================
# TikTok for Business
# ========================================
# Obtener de: https://developers.tiktok.com/
TEST_TIKTOK_APP_ID=
TEST_TIKTOK_APP_SECRET=
TEST_TIKTOK_ACCESS_TOKEN=

# ========================================
# Webhook Secrets
# ========================================
# Para verificación HMAC de webhooks
META_WEBHOOK_SECRET=your-meta-webhook-secret-here
WHATSAPP_WEBHOOK_SECRET=your-whatsapp-webhook-secret-here
TIKTOK_WEBHOOK_SECRET=your-tiktok-webhook-secret-here
WEBHOOK_SECRET=fallback-webhook-secret-here

# ========================================
# Testing Configuration
# ========================================
NODE_ENV=test
LOG_LEVEL=debug  # debug, info, warn, error
